<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="#80000000">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wd_room"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#60B0CC"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:padding="10dp"
            android:orientation="vertical">

            <com.andexert.calendarlistview.library.DayPickerView
                android:id="@+id/pickerView"
                xmlns:calendar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                calendar:drawRoundRect="true"
                calendar:headerMonthHeight="60dp"
                calendar:calendarHeight="250dp"
                calendar:textSizeMonth="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/sendPerson"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="검색"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
